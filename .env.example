# ─── Server ───────────────────────────────────────────────────────────────────
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# ─── Database ─────────────────────────────────────────────────────────────────
# SQLite (default for local/Docker dev)
DATABASE_URL=file:./data/aegis.db

# PostgreSQL (production — uncomment and set)
# DATABASE_URL=postgresql://user:password@localhost:5432/aegis

# ─── Cache ────────────────────────────────────────────────────────────────────
# In-memory (default for dev)
CACHE_DRIVER=memory

# Redis (production — uncomment and set)
# CACHE_DRIVER=redis
# REDIS_URL=redis://localhost:6379

# ─── Signal Providers ─────────────────────────────────────────────────────────
GITHUB_TOKEN=                    # GitHub personal access token (increases rate limits)
MOLTBOOK_API_KEY=                # Moltbook API key (format: moltbook_xxx)
TWITTER_BEARER_TOKEN=           # Twitter/X API v2 bearer token
CLAWHUB_API_KEY=                 # ClawHub API key

# ─── Web3 / Attestation ───────────────────────────────────────────────────────
# Base L2 (Mainnet)
BASE_RPC_URL=https://mainnet.base.org
AEGIS_ATTESTATION_PRIVATE_KEY=  # Wallet private key for signing EAS attestations
AEGIS_EAS_SCHEMA_UID=0xfff1179b55bf0717c0a071da701b4f597a6bfe0669bcb1daca6a66f0e14d407d
EAS_CONTRACT_ADDRESS=0x4200000000000000000000000000000000000021

# Base Sepolia (Testnet — for development)
# BASE_RPC_URL=https://sepolia.base.org
# EAS_CONTRACT_ADDRESS=0x4200000000000000000000000000000000000021

# ─── IPFS ─────────────────────────────────────────────────────────────────────
# web3.storage token for pinning signal evidence
WEB3_STORAGE_TOKEN=

# ─── Rate Limiting ────────────────────────────────────────────────────────────
RATE_LIMIT_ANONYMOUS=100        # requests/minute (unauthenticated)
RATE_LIMIT_AUTHENTICATED=5000   # requests/minute (authenticated)

# ─── Attestation ──────────────────────────────────────────────────────────────
ATTESTATION_ENABLED=false       # Set to true to enable on-chain anchoring
